{
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "semi": true,
                "singleQuote": true,
                "bracketSpacing": false,
                "eslintIntegration": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "lf"
            }
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "lf"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "lf"
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "lf"
            }
        }
    ]
}
